{
	"compilerOptions": {
		"target": "ES2022",
		"module": "nodenext",
		"moduleResolution": "nodenext",
		"outDir": "./dist",
		"rootDir": "./src",
		"strict": true,
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true,
		"typeRoots": ["./node_modules/@types", "./types"]
	},
	"include": ["src/**/*.ts"],
	"exclude": ["node_modules"]
}
