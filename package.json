{
	"scripts": {
		"build": "tsc",
		"start": "NODE_ENV=staging node dist/server.js",
		"dev": "NODE_ENV=development nodemon --watch 'src/**/*.ts' --exec 'tsx' src/server.ts",
		"watch": "tsc -w",
		"lint": "eslint --ext .js,.ts,.vue ./",
		"lintfix": "eslint --fix --ext .js,.ts,.vue ./",
		"format": "prettier --write \"**/*.{js,jsx,ts,tsx,vue,json,css,scss,md}\""
	},
	"devDependencies": {
		"@types/express": "^5.0.1",
		"@types/jsonwebtoken": "^9.0.9",
		"@types/multer": "^1.4.12",
		"@types/nodemailer": "^6.4.17",
		"@types/nunjucks": "^3.2.6",
		"@typescript-eslint/eslint-plugin": "^8.29.0",
		"@typescript-eslint/parser": "^8.29.0",
		"eslint": "^8.57.1",
		"eslint-config-standard": "^17.1.0",
		"eslint-plugin-import": "^2.31.0",
		"eslint-plugin-vue": "^10.0.0",
		"nodemon": "^3.1.9",
		"prettier": "^3.5.3",
		"tsx": "^4.19.3"
	},
	"dependencies": {
		"doc-api-server": "git@github.com:documentmedia/doc-api-server.git",
		"nodemailer": "^6.10.0",
		"nunjucks": "^3.2.4"
	}
}
